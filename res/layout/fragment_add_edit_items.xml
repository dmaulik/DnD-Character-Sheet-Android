<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFragmentAddEditItems"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/tableArmor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" 
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRowArmor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textArmor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:text="@string/labelArmor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
                
                <TextView
                    android:id="@+id/textAddArmor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:paddingBottom="8dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:text="@string/labelAdd"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </TableRow>
        </TableLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/tableWeapons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRowWeapons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                 <TextView
                     android:id="@+id/textWeapons"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingBottom="8dp"
                     android:paddingLeft="4dp"
                     android:paddingTop="8dp"
                     android:text="@string/labelWeapons"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:typeface="serif" />
                 
                 <TextView
                     android:id="@+id/textAddWeapons"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1.0"
                     android:gravity="right"
                     android:paddingBottom="8dp"
                     android:paddingRight="4dp"
                     android:paddingTop="8dp"
                     android:text="@string/labelAdd"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:typeface="serif" />
                 
            </TableRow>
        </TableLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/tableMisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" 
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRowMisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                 
                  <TextView
                      android:id="@+id/textMisc"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingBottom="8dp"
                      android:paddingLeft="4dp"
                      android:paddingTop="8dp"
                      android:text="@string/labelMisc"
                      android:textSize="16sp"
                      android:textStyle="bold"
                      android:typeface="serif" />
                  
                  <TextView
                      android:id="@+id/textAddMisc"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1.0"
                      android:gravity="right"
                      android:paddingBottom="8dp"
                      android:paddingRight="4dp"
                      android:paddingTop="8dp"
                      android:text="@string/labelAdd"
                      android:textSize="16sp"
                      android:textStyle="bold"
                      android:typeface="serif" />
                  
            </TableRow>
        </TableLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/tableExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" 
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRowExtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                  
                 <TextView
                     android:id="@+id/textExtras"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingBottom="8dp"
                     android:paddingLeft="4dp"
                     android:paddingTop="8dp"
                     android:text="@string/labelExtras"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:typeface="serif" />
                 
                 <TextView
                     android:id="@+id/textAddExtras"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1.0"
                     android:gravity="right"
                     android:paddingBottom="8dp"
                     android:paddingRight="4dp"
                     android:paddingTop="8dp"
                     android:text="@string/labelAdd"
                     android:textSize="16sp" />
                 
            </TableRow>

        </TableLayout>
    </ScrollView>
    
</LinearLayout>